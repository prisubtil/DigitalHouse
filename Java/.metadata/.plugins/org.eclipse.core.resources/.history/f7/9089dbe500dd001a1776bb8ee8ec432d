package empregado;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		Empregado x = new Empregado();
		
		System.out.println("Digite os dados do funcionário ");
		System.out.print("Nome: ");
		x.nome = sc.nextLine();
		System.out.print("Salário bruto: ");
		x.salario = sc.nextDouble();
		System.out.print("Imposto: ");
		x.imposto = sc.nextDouble();
		
		System.out.println("Empregado: "+x.nome+", R$ "+x.salarioLiquido());
		
		System.out.print("Digite a porcentagem do aumento : ");
		x.imposto = sc.nextDouble();
		
		sc.close();
	}

}
