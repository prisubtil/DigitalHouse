package main;

import java.util.Scanner;
import main.Produto;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		Produto x = new Produto();
		
		System.out.println("Digite o Produto, o preço e a quantidade: ");
		x.nome = sc.next();
		x.preco = sc.nextDouble();
		x.quantidade = sc.nextInt();
		
		System.out.println("Nome: "+nome+", R$"+valor+", "+quantidade+" unidades, Total: R$ "+preco*quantidade);

	}

}
