package main;

public class Produto {
	public String nome;
	public double preco;
	public int quantidade;
	public int quantidadeAdicionada;
	public int quantidadeRemovida;
	
	
	public double valorTotalEmEstoque() {
		double total = preco*quantidade;
		return total;
	}
	
	public int adicionarProduto(){
		  quantidade = quantidade + quantidadeAdicionada;
		 
	}
	
	public int removerProduto() {
		quantidade = quantidade - quantidadeRemovida;
	}
}
