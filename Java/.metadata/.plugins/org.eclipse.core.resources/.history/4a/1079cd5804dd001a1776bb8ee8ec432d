package geometria;

import java.util.Scanner;

import geometria.Retangulo;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		Retangulo x = new Retangulo(); 
		
		System.out.println("Digite a base e a altura do retângulo: ");
		x.altura = sc.nextDouble();
		x.base = sc.nextDouble();
		
		System.out.println("AREA: "+x.calculoArea());
		System.out.println("PERÍMETRO: "+x.calculoPerimetro());
		System.out.println("DIAGONAL: "+x.calculoDiagonal());
	}

}
